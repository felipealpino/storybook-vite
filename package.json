{
  "name": "storybook-vite",
  "version": "1.0.2",
  "description": "Storybook Components Vite",
  "author": "felipegontijo",
  "private": true,
  "license": "MIT",
  "repository": "https://github.com/felipealpino/storybook-vite.git",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.tsx",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "rmdist": "rm -rf dist",
    "build": "yarn rmdist && microbundle-crl --no-compress --format modern,cjs && yarn mv",
    "mv": "mv -f -v dist/src/* dist/ && yarn rmsrc",
    "rmsrc": "rm -rf dist/src/",
    "storybook": "start-storybook -p 6006",
    "predeploy": "npm run build-storybook",
    "deploy-storybook": "gh-pages -d storybook-static",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-icons": "^4.6.0",
    "styled-components": "^5.3.5",
    "uuid": "^8.3.2"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@storybook/addon-actions": "^6.5.10",
    "@storybook/addon-essentials": "^6.4.22",
    "@storybook/addon-interactions": "^6.5.10",
    "@storybook/addon-links": "^6.5.10",
    "@storybook/builder-vite": "^0.1.37",
    "@storybook/react": "^6.1.21",
    "@storybook/testing-library": "^0.0.13",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@types/styled-components": "^5.1.26",
    "@types/uuid": "^8.3.4",
    "@vitejs/plugin-react": "^2.0.1",
    "babel-loader": "^8.2.5",
    "eslint": "^8.22.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-react": "^7.31.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "microbundle-crl": "^0.13.11",
    "react-dom": "^18.2.0",
    "typescript": "^4.6.4",
    "vite": "^3.0.7"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:react-hooks/recommended"
    ]
  }
}
